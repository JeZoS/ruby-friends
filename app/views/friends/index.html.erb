<h1>Friends</h1>

<table class='table table-striped' >
  <thead >
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show', friend,class: 'btn btn-sm hvr-sweep-to-right text-primary' %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) ,class: 'btn btn-sm text-warning hvr-sweep-to-right'%></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn text-danger btn-sm hvr-sweep-to-right'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: 'btn hvr-sweep-to-right border' %>
